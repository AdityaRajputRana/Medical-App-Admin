<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedicalAppAdmin" parent="Theme.Material3.Light.NoActionBar">

    </style>

    <style name="ShapeAppearance.MaterialComponents.Large.Component" parent="ShapeAppearance.MaterialComponents.Large.Component">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Theme.MedicalAppAdmin" parent="Base.Theme.MedicalAppAdmin" >
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:progressTint">@color/primary700</item>
        <item name="android:windowSplashScreenBackground">@color/primary700</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_icon</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/CustomTextAppearance</item>
        <item name="tabSelectedTextColor">@color/primary700</item>
        <item name="tabIndicatorColor">@color/primary700</item>
    </style>

    <style name="CustomTextAppearance" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/natural500</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>
</resources>