<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tvPageCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Page Number"
            android:textColor="@color/colorPrimTxt"
            android:textSize="12sp" />
    <com.example.medicalappadmin.canvas.NotepadView
        android:background="#4D818181"
        android:id="@+id/rcvNotepadView"
        app:layout_constraintTop_toBottomOf="@id/tvPageCount"
        app:layout_constraintDimensionRatio="H, 1:1.414"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/llPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />




</FrameLayout>