<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground"
    tools:context=".PrescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--TODO:Remove it-->
        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_bg"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/hos_name"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Hospital Name"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Qualifications of doctor"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Reg number"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="#175D8F"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/actionBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="3dp"
                        android:background="@drawable/rounded_off_white_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="7dp"
                        android:paddingVertical="2dp"
                        android:text="SUBMIT"
                        android:textColor="#175D8F"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:background="@drawable/rounded_white_border_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="DND"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_white_border_bg"
                        android:fontFamily="@font/poppins_semibold"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="History"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="gone" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_bg"
                android:elevation="4dp"
                app:navigationIcon="@drawable/hamburger_icon"
                app:subtitle="current process"
                app:subtitleTextColor="@color/white"
                app:title="Page Number"
                app:titleTextColor="@color/white" />


            <ProgressBar
                android:id="@+id/pbPrescription"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue_bg"
                android:visibility="gone" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <com.example.medicalappadmin.canvas.NotepadView
                android:id="@+id/canvasView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/voiceUploadLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:background="@drawable/circular_bg"
                android:layout_gravity="bottom|end">

                <ProgressBar
                    android:id="@+id/pbVoiceUpload"
                    android:layout_width="80dp"
                    style="@style/CircularDeterminateProgressBar"
                    android:layout_height="80dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:max="100"
                    tools:progress="0" />

                <ImageView
                    android:id="@+id/ivVoiceUpload"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/baseline_cloud_upload_24" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llPageDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_main"

                >
                <TextView
                    android:visibility="gone"
                    android:drawableLeft="@drawable/baseline_phone_24"
                    android:drawablePadding="4dp"
                    android:id="@+id/tvPagePhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="4dp"
                    android:text="8580415978"
                    android:textColor="@color/colorPrimTxt"
                    android:textSize="14sp" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llPageDetailsStrip"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorSecTxt"
                    android:orientation="horizontal" />

                <TextView
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:visibility="gone"
                    android:drawablePadding="4dp"
                    android:id="@+id/tvPagePatientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="4dp"
                    android:text="Aditya R"
                    android:textColor="@color/colorPrimTxt"
                    android:textSize="14sp" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/colorBackground"
        app:headerLayout="@layout/nav_drawer_body" />


</androidx.drawerlayout.widget.DrawerLayout>