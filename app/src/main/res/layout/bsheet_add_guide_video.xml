<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheets"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Save a video"
        android:textColor="@color/colorPrimTxt"
        android:textSize="24sp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etVideoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main"
        android:fontFamily="@font/poppins_medium"
        android:inputType="text"
        android:layout_marginBottom="8dp"
        android:hint="Name of video"
        android:paddingVertical="12dp"
        android:maxLines="1"
        android:paddingHorizontal="8dp"
        android:imeOptions="actionNext"
        android:textColor="@color/colorPrimTxt"
        android:textColorHint="@color/colorSecTxt"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etVideoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main"
        android:fontFamily="@font/poppins_medium"
        android:inputType="text"
        android:hint="Description"
        android:maxLines="4"
        android:imeOptions="actionNext"
        android:layout_marginBottom="8dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:textColor="@color/colorPrimTxt"
        android:textColorHint="@color/colorSecTxt"
        android:textSize="16sp" />
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etVideoLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main"
        android:fontFamily="@font/poppins_medium"
        android:inputType="textUri"
        android:imeOptions="actionDone"
        android:hint="Link to the video"
        android:maxLines="2"
        android:layout_marginBottom="8dp"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:textColor="@color/colorPrimTxt"
        android:textColorHint="@color/colorSecTxt"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tvAGActionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginBottom="8dp"
        android:layout_marginVertical="8dp"
        android:text=""
        android:textColor="@color/colorDanger"
        android:textSize="14sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBSAGNSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_rounded_bg"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ProgressBar
            android:id="@+id/pbBSAG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:gravity="end"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>