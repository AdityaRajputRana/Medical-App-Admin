<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheets"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingBottom="48dp"
    android:paddingTop="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_bold"
        android:textSize="20sp"
        android:textColor="@color/natural600"
        android:text="Attach Documents"
        android:layout_marginVertical="24dp" />


    <LinearLayout
        android:padding="16dp"
        android:background="@drawable/bg_options_rounded100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cameraBtn">
        
        <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:tint="@color/natural600"
            android:src="@drawable/baseline_camera_alt_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Camera"
                android:textColor="@color/natural700"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/natural400"
                android:text="Capture image directly with camera"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_options_rounded100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/galleryBtn">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:tint="@color/natural600"
            android:src="@drawable/ic_gallery" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select from Gallery"
                android:textColor="@color/natural700"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/natural400"
                android:text="Select Images from your gallery"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="@drawable/bg_options_rounded100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/docsBtn">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="match_parent"
            app:tint="@color/natural600"
            android:src="@drawable/baseline_picture_as_pdf_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Documents"
                android:textColor="@color/natural700"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/natural400"
                android:text="Upload PDF files directly from your device"
                android:fontFamily="@font/inter"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>






</LinearLayout>